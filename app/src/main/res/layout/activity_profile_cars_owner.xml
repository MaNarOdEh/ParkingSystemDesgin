<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_cars_owner"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/colorAccent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/img_back_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_alignParentStart="true"
                    android:clickable="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner's Profile"
                        android:textColor="#fdfdfd"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-345-36"
                    android:textColor="#fdfdfd"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:src="@drawable/hource"
            android:elevation="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manar Odeh"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0597853662"
            android:textColor="#fdfdfd"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/paper_plane" />
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Send An SMS"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffff"
                android:src="@drawable/alarm"
                android:layout_margin="8dp"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:text="Quick call"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:layout_margin="8dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:src="@drawable/telephone"
                android:layout_margin="8dp"/>
            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Send a Notification "
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            >
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffff"
                android:src="@drawable/back"
                android:tint="@color/colorAccent"
                android:layout_margin="8dp"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:src="@drawable/destination"
                android:layout_margin="8dp"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffff"
                android:src="@drawable/contract"
                android:tint="@color/colorAccent"
                android:layout_margin="8dp"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:src="@drawable/set"
                android:tint="@android:color/white"
                android:layout_margin="8dp"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>

</ScrollView>